{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/ansible.sh"
    },
    {
      "type": "file",
      "source": "/usr/local/ansible/vault-password",
      "destination": "/tmp/vault-password"
    },
    {
      "type": "ansible-local",
      "playbook_file": "../../ansible/setup-producer.yml",
      "playbook_dir": "../../ansible",
      "inventory_groups": "producer_vm_studio",
      "extra_arguments": ["--vault-password-file", "/tmp/vault-password", "--extra-vars", "producer_version={{user `version`}}"]
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg PACKER_USER=packer PACKER_AUTHORIZED_KEY={{ .SSHPublicKey | urlquery }}<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 81920,
      "format": "ova",
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "https",
      "iso_urls": [
        "Rocky-9.4-x86_64-minimal.iso",
        "https://download.rockylinux.org/pub/rocky/9/isos/x86_64/Rocky-9.4-x86_64-minimal.iso"
      ],
      "iso_checksum": "sha256:ee3ac97fdffab58652421941599902012179c37535aece76824673105169c4a2",
      "output_directory": "builds/producer-studio-{{user `version`}}",
      "ssh_username": "packer",
      "ssh_port": 22,
      "ssh_wait_timeout": "1800s",
      "shutdown_command": "sudo -S /sbin/halt -h -p",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "producer-studio-{{user `version`}}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ]
}
