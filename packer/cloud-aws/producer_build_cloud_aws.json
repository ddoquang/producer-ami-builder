{
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "{{user `aws_region`}}",
            "profile": "{{user `aws_profile`}}",
            "vpc_id": "{{user `vpc_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "security_group_ids": "{{user `security_group_ids`}}",
            "iam_instance_profile": "{{user `iam_instance_profile`}}",
            "source_ami": "{{user `source_ami`}}",
            "launch_block_device_mappings": [
                {
                  "device_name": "/dev/sda1",
                  "volume_size": "{{user `volume_size_root`}}",
                  "volume_type": "gp2",
                  "delete_on_termination": true
                }
              ],
            "ami_name": "Producer-Cloud-{{user `application_version_tag`}}-{{user `build_version`}}",
            "instance_type": "{{user `instance_type`}}",
            "associate_public_ip_address": true,
            "communicator": "ssh",
            "ssh_username": "rocky",
            "tags": {
                "Name": "Producer-Cloud-{{user `application_version_tag`}}-{{user `build_version`}}",
                "OS_Version": "{{user `os_version_tag`}}",
                "app": "{{user `application_tag`}}",
                "app_version": "{{user `application_version_tag`}}",
                "build_timestamp": "{{user `build_version`}}",
                "stage": "{{user `deployment_stage`}}"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                       "sudo dnf install -y epel-release",
                       "sudo dnf install -y ansible"
                      ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "../../ansible/setup-producer.yml",
            "playbook_dir": "../../ansible",
            "inventory_groups": "{{user `application_tag`}}",
            "extra_arguments": ["--vault-password-file", "vault-password", "--extra-vars", "producer_version={{user `application_version_tag`}}"]
        }
    ]
}